{% extends 'base.html.twig' %}

{% block header_title %}
    <h1 class="display-4 fw-bolder text-center mt-0 mb-0">Bienvenue sur Todo List,</h1>
    <p class="lead fw-normal text-black-50 text-center mt-0">l'application vous permettant de gérer l'ensemble de vos tâches sans effort !</p>
{% endblock %}

{% block header_content %}
    <div class="text-center mt-2">
        <img class="img-fluid" src="{{ asset('img/todolist_homepage.jpg') }}" />
    </div>
{% endblock %}


{% block body %}

    {% if app.user %}
        <div class="row">
            <div class="d-inline-flex justify-content-around">
                <a href="{{ path('app_task_create') }}" class="btn btn-success m-2 flex-grow-1">Créer une nouvelle tâche</a>
                <a href="{{ path('app_task_list') }}" class="btn btn-info m-2 flex-grow-1">Consulter la liste des tâches à faire</a>
                <a href="{{ path('app_task_list_user') }}" class="btn btn-warning m-2 flex-grow-1">Consulter la liste de vos tâches</a>
                <a href="{{ path('app_task_list_closed') }}" class="btn btn-secondary m-2 flex-grow-1">Consulter la liste des tâches terminées</a>
            </div>
        </div>
    {% else %}
        <div class="row mb-3">
            <p class="text-center">
                Vous devez être authentifié pour accéder à l'application.
            </p>
            <div class="d-inline-flex justify-content-around">
                <a href="{{ path('app_login') }}" class="btn btn-info">Vous connecter</a>
            </div>
        </div>
    {% endif %}
{% endblock %}
