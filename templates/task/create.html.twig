{% extends 'base.html.twig' %}

{% block header_title %}
    <h1 class="fw-bolder text-center mt-0 mb-0">Créer une nouvelle tâche</h1>
{% endblock %}

{% block header_content %}
    <div class="text-center mt-2">
        <img class="img-fluid" src="{{ asset('img/todolist_content.jpg') }}" />
    </div>
{% endblock %}


{% block body %}
    <div class="row">
        {% form_theme form 'bootstrap_5_layout.html.twig' %}
        {{ form_start(form, {'action' : path('app_task_create')}) }}
            {{ form_row(form.title, {
                'label': "Titre de la tâche",
                'attr': {
                    'placeholder': "Choisissez un titre pour la nouvelle tâche"
                }})
            }}

            {{ form_row(form.content, {
                'label': "Contenu de la tâche",
                'attr': {
                    'placeholder': "Entrez une description pour la nouvelle tâche"
                }})
            }}

            <p class="text-center"><button type="submit" class="btn btn-success pull-right">Créer la tâche</button></p>
        {{ form_end(form) }}

        <p class="text-end"><a href="{{ path('app_task_list') }}" class="btn btn-primary">Retour à la liste des tâches</a></p>
    </div>
{% endblock %}
